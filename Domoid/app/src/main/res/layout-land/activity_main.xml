<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:weightSum="5"
    android:padding="5dp">

    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:id="@+id/b_kitchen"
            android:text="Cuisine"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:textColor="#858585"
            android:layout_weight="1"
            android:src="@drawable/kitchen_buttons"
            android:background="@drawable/syh_logo_app_kitchen"
            />

        <Button
            android:id="@+id/b_livingroom"
            android:textColor="#858585"
            android:text="@string/livingroom"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/living_room_buttons"
            android:background="@drawable/syh_logo_app_canap"
            />

        <Button
            android:id="@+id/b_entrance"
            android:text="EntrÃ©e"
            android:textColor="#858585"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/bedroom_buttons"
            android:background="@drawable/syh_logo_app_all" />

    </LinearLayout>

    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:id="@+id/b_bathroom"
            android:text="@string/bathroom"
            android:textColor="#858585"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/bath_room_buttons"
            android:background="@drawable/syh_logo_app_bath"/>

        <Button
            android:id="@+id/b_parking"
            android:text="Garage"
            android:textColor="#858585"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/parkingbuttons"
            android:background="@drawable/syh_logo_app_garage" />

        <Button
            android:id="@+id/b_night_missing_mode"
            android:text="Mode nuit"
            android:textColor="#858585"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/night_missing_mode_buttons"
            android:background="@drawable/syh_logo_app_moon"/>
    </LinearLayout>

    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="3">
    <Button
        android:id="@+id/appstore"
        android:text="AppStore"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    </LinearLayout>
</LinearLayout>