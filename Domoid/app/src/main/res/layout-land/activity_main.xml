<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:weightSum="4"
    android:padding="5dp">

    <LinearLayout
        android:background="#FFFFFF"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageButton
            android:id="@+id/b_kitchen"
            android:text="@string/kitchen"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/bath_room_buttons"
            android:background="@drawable/syncncook_logo"
            />

        <ImageButton
            android:id="@+id/b_livingroom"
            android:text="@string/livingroom"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/bath_room_buttons"
            android:background="@drawable/syncnrest_logo"
            />


    </LinearLayout>

    <LinearLayout
        android:background="#FFFFFF"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageButton
            android:id="@+id/b_bedroom"
            android:text="@string/bedroom"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/bath_room_buttons"
            android:background="@drawable/syncnall_logo" />

        <ImageButton
            android:id="@+id/b_bathroom"
            android:text="@string/bathroom"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/bath_room_buttons"
            android:background="@drawable/syncnbath_logo"/>

    </LinearLayout>
</LinearLayout>