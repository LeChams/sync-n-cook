<?xml version="1.0" encoding="utf-8"?>
<GridLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/grid_room"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:columnCount="3"
    android:rowCount="2" >
    
    <Button 
        android:id="@+id/b_kitchen"
        android:layout_gravity="fill"
        android:text="@string/kitchen"/>
    
    <Button 
        android:id="@+id/b_livingroom"
        android:layout_gravity="fill"
        android:text="@string/livingroom"/>
    
    <Button 
        android:id="@+id/b_bathroom"
        android:layout_gravity="fill"
        android:text="@string/bathroom"/>
    
    <Button 
        android:id="@+id/b_bedroom"
        android:layout_gravity="fill"
        android:text="@string/bedroom"/>
    
    <Button 
        android:layout_gravity="fill"
        android:text="@string/bathroom"/>
    
    <Button
        android:layout_gravity="fill"
        android:text="@string/bedroom"/>
    
   </GridLayout>
    
